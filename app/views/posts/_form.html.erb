<%= form_with(model: @post, local: true ,url: confirm_posts_path ) do |form| %>
<% if @post.errors.any? %>
  <div class="error_explanation">
    <h2>１文字以上、１４０字以内でつぶやいてください。</h2>
  </div>
 <% end %>

  <div class="post_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

